<div class="container campaign-container">
  <div class="row">
    <div class="col-sm-2">
      <img src=""><br>
    </div>
    <div class="col-sm-10">
      <h1><%= product.name %></h1>
      <h2 class="product-category"><%= product.cat %></h2>
      <h2 class="product-price"><%= product.price %></h2>
      <h2 class="product-sku"><%= product.sku %></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <img class="product-image" src="<%= product.picture %>">
    </div>
    <div class="col-sm-4 campaign-info">
      <form action="/products/<%= product._id %>/delete" method="POST">
        <button type="submit">Delete Product</button>
      </form>
      <br>
      <br>
      <a href="/products/<%= product._id %>/edit">
        <button type="submit">Edit Product</button></a>
      </form>
    </div>
  </div>
</div>
